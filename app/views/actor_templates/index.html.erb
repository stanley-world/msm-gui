<h1>
  List of all actors
</h1>

<form action="/insert_actor_record" method="post">
<div>
  <label for="title_field">Name</label>
  <input id="title_field" type="text" name="the_name">
<div>

<div>
  <label for="year_field">Dob</label>
  <input id="year_field" type="text" name="the_dob">
<div>

<div>
  <label for="duration_field">Bio</label>
  <input id="duration_field" type="text" name="the_bio">
<div>


<div>
  <label for="image_field">Image</label>
  <input id="image_field" type="text" name="the_image">
<div>

<button>
    Create actor
</button>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
